@model IEnumerable<GeckoTracker.Models.PairingListView>



@{
    ViewBag.Title = "Index";
}

@section head{
    <style type="text/css">
        tr:nth-child(even) {
            background: #fbf9af
        }

        tr:nth-child(odd) {
            background: #c4c1c1
        }

        tr {
            border: double;
        }

        body {
            background-image: url('Assets/leaves.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            width: 100vw;
            height: 100vh;
            display: flex;
            align-items: stretch;
            justify-content: center;
            margin: 0;
        }
    </style>
}


<h2>Pairings Index</h2>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaleGeckoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FemaleGeckoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Season)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.MaleGeckoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FemaleGeckoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PairingID }) |
                @Html.ActionLink("Details", "Details", new { id = item.PairingID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PairingID })
            </td>
        </tr>
    }

</table>

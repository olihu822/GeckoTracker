@model GeckoTracker.Models.LoanEdit

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Loan Information</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
